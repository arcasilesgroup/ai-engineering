{
  "permissions": {
    "allow": [
      "Bash(gh:*)",
      "Bash(az:*)",
      "Bash(npx prettier:*)",
      "Bash(npx eslint:*)",
      "Bash(npm test:*)",
      "Bash(npm run:*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash $CLAUDE_PROJECT_DIR/.ai-engineering/hooks/pre-tool.sh"
          },
          {
            "type": "command",
            "command": "bash $CLAUDE_PROJECT_DIR/.ai-engineering/hooks/warn-branch-origin.sh"
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash $CLAUDE_PROJECT_DIR/.ai-engineering/hooks/pre-tool.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash $CLAUDE_PROJECT_DIR/.ai-engineering/hooks/post-tool.sh"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "bash $CLAUDE_PROJECT_DIR/.ai-engineering/hooks/version-check.sh"
          }
        ]
      }
    ]
  }
}
