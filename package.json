{
  "name": "ai-engineering",
  "version": "0.1.0-beta.1",
  "description": "AI coding assistant framework with executable enforcement: prompts + runtime hooks + verification gates",
  "type": "module",
  "bin": {
    "ai-engineering": "./dist/cli/index.js"
  },
  "main": "./dist/index.js",
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist",
    "stacks",
    "agents",
    "skills",
    "templates",
    "schemas"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/ test/ --ext .ts",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write 'src/**/*.ts' 'test/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts' 'test/**/*.ts'",
    "prepublishOnly": "pnpm build && pnpm test && pnpm typecheck"
  },
  "keywords": [
    "ai",
    "coding-assistant",
    "claude",
    "copilot",
    "codex",
    "standards",
    "enforcement",
    "hooks",
    "quality-gates"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@clack/prompts": "^0.9.1",
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "handlebars": "^4.7.8",
    "js-yaml": "^4.1.0",
    "ajv": "^8.17.1",
    "semver": "^7.7.1"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.13.4",
    "@types/semver": "^7.5.8",
    "tsup": "^8.4.0",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5",
    "@vitest/coverage-v8": "^3.0.5",
    "eslint": "^9.20.0",
    "prettier": "^3.5.1",
    "@evilmartians/lefthook": "^1.10.10"
  }
}
